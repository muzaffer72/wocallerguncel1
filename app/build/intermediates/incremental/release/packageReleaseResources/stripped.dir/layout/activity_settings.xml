                        app:layout_constraintTop_toBottomOf="@+id/tv_choose_popup_heading" />

                    <ImageView
                        android:id="@+id/center_imv"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="0.0dip"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/id_center"
                        app:layout_constraintBottom_toBottomOf="@+id/top_imv"
                        app:layout_constraintEnd_toStartOf="@+id/bottom_imv"
                        app:layout_constraintStart_toEndOf="@+id/top_imv"
                        app:layout_constraintTop_toTopOf="@+id/top_imv" />

                    <ImageView
                        android:id="@+id/bottom_imv"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="0.0dip"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/id_bottom"
                        app:layout_constraintBottom_toBottomOf="@+id/center_imv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/center_imv"
                        app:layout_constraintTop_toTopOf="@+id/center_imv" />

                    <TextView
                        android:id="@+id/tv_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/top"
                        app:layout_constraintEnd_toEndOf="@+id/top_imv"
                        app:layout_constraintStart_toStartOf="@+id/top_imv"
                        app:layout_constraintTop_toBottomOf="@+id/top_imv" />

                    <TextView
                        android:id="@+id/tv_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/center"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_top"
                        app:layout_constraintEnd_toEndOf="@+id/center_imv"
                        app:layout_constraintStart_toEndOf="@+id/top_imv"
                        app:layout_constraintTop_toBottomOf="@+id/top_imv"
                        app:layout_constraintTop_toTopOf="@+id/tv_top" />

                    <TextView
                        android:id="@+id/tv_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bottom"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_center"
                        app:layout_constraintEnd_toEndOf="@+id/bottom_imv"
                        app:layout_constraintStart_toEndOf="@+id/center_imv"
                        app:layout_constraintTop_toBottomOf="@+id/top_imv"
                        app:layout_constraintTop_toTopOf="@+id/tv_center" />

                    <RadioButton
                        android:id="@+id/top_position_radio_button"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:buttonTint="@color/colorPrimary"
                        android:gravity="top"
                        android:text="@string/top"
                        app:layout_constraintEnd_toEndOf="@+id/tv_top"
                        app:layout_constraintStart_toStartOf="@+id/tv_top"
                        app:layout_constraintTop_toBottomOf="@+id/tv_top" />

                    <RadioButton
                        android:id="@+id/center_position_radio_button"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:buttonTint="@color/colorPrimary"
                        android:gravity="top"
                        android:text="@string/center"
                        app:layout_constraintEnd_toEndOf="@+id/tv_center"
                        app:layout_constraintStart_toStartOf="@+id/tv_center"
                        app:layout_constraintTop_toBottomOf="@+id/tv_center" />

                    <RadioButton
                        android:id="@+id/bottom_position_radio_button"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:buttonTint="@color/colorPrimary"
                        android:gravity="top"
                        android:text="@string/bottom"
                        app:layout_constraintEnd_toEndOf="@+id/tv_bottom"
                        app:layout_constraintStart_toStartOf="@+id/tv_bottom"
                        app:layout_constraintTop_toBottomOf="@+id/tv_bottom" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
