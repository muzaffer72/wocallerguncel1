                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_show_phonebook_contacts_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
