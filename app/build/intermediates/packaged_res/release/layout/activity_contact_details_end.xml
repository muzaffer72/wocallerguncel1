<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary"
    app:layoutDescription="@xml/activity_contact_detail_end_xml_constraintlayout_scene">

    <FrameLayout
        android:id="@+id/fr_ads"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_1sdp"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </FrameLayout>

    <View
        android:id="@+id/banner_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/fr_ads"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:contentDescription="@string/app_name"
        android:foreground="@drawable/rounded_selectd"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/iv_premium"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:contentDescription="@string/app_name"
        android:foreground="@drawable/rounded_selectd"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/ic_premium"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/iv_edit"
        app:layout_constraintTop_toTopOf="@+id/iv_menu" />


    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:contentDescription="@string/app_name"
        android:foreground="@drawable/rounded_selectd"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg_screen"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_btm_sheet"
        app:layout_constraintBottom_toTopOf="@+id/banner_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_menu" />

    <androidx.cardview.widget.CardView
        android:id="@+id/contact_image_holder"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_marginStart="@dimen/_5sdp"
        android:elevation="0.0dip"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/_65sdp"
        app:cardElevation="0.0dip"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        app:layout_constraintWidth_percent="0.11">

        <ImageView
            android:id="@+id/contact_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/ic_avatar" />


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@id/who_profile"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginTop="@dimen/_9sdp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/who"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/contact_image_holder"
        app:layout_constraintTop_toTopOf="@+id/contact_image_holder" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sr"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/bg_btm_sheet"
        app:layout_constraintBottom_toTopOf="@+id/banner_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg_screen">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/constraintLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_30sdp"
            app:layoutDescription="@xml/activity_contact_detail_end_xml_constraintlayout_scene">

            <LinearLayout
                android:id="@+id/tag_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/tag_icon"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_person_24"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tag_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/app_name"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_8ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/switzer_semibold"
                android:letterSpacing="0.05"
                android:maxLength="19"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tag_lay" />

            <ImageView
                android:id="@+id/edit_name"
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_add_task_24"
                app:layout_constraintBottom_toBottomOf="@+id/tv_full_name"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/tv_full_name"
                app:layout_constraintTop_toTopOf="@+id/tv_full_name"
                app:tint="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/spam_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/edit_name">

                <LinearLayout
                    android:id="@+id/type_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:background="@drawable/rounded_btn2"
                    android:backgroundTint="#F9DF58"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_business_24"
                        app:tint="#654545" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/likely_a_business"
                        android:textColor="#654545"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/type_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:background="@drawable/rounded_btn2"
                    android:backgroundTint="#F9DF58"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_person_24"
                        app:tint="#654545" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/likely_a_person"
                        android:textColor="#654545"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_buttons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spam_type">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_fav"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/_70sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cl_call"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/favorite_btn"
                        android:layout_width="0.0dip"
                        android:layout_height="0.0dip"
                        android:layout_margin="@dimen/_8sdp"
                        android:elevation="0.0dip"
                        app:cardBackgroundColor="#ffe6effe"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0.0dip"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.15"
                        app:layout_constraintWidth_percent="0.6">

                        <ImageView
                            android:id="@+id/iv_fav"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:contentDescription="@string/app_name"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/favorite_fill"
                            app:tint="@color/colorPrimary" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/switzer_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/favourites"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/favorite_btn" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_call"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/_70sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/cl_fav"
                    app:layout_constraintEnd_toStartOf="@+id/save_lay"
                    app:layout_constraintStart_toEndOf="@+id/cl_fav"
                    app:layout_constraintTop_toTopOf="@+id/cl_fav">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/callBtn"
                        android:layout_width="0.0dip"
                        android:layout_height="0.0dip"
                        android:layout_margin="@dimen/_8sdp"
                        android:elevation="0.0dip"
                        app:cardBackgroundColor="#ffe6effe"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0.0dip"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.15"
                        app:layout_constraintWidth_percent="0.6">

                        <ImageView
                            android:id="@+id/iv_call"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:contentDescription="@string/app_name"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_call_green"
                            app:tint="@color/colorPrimary" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/switzer_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/call"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/callBtn" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/save_lay"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/_70sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/cl_call"
                    app:layout_constraintEnd_toStartOf="@+id/edit_lay"
                    app:layout_constraintStart_toEndOf="@+id/cl_call"
                    app:layout_constraintTop_toTopOf="@+id/cl_call">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/save"
                        android:layout_width="0.0dip"
                        android:layout_height="0.0dip"
                        android:layout_margin="@dimen/_8sdp"
                        android:elevation="0.0dip"
                        app:cardBackgroundColor="#ffe6effe"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0.0dip"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.15"
                        app:layout_constraintWidth_percent="0.6">

                        <ImageView
                            android:id="@+id/iv_msg"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:contentDescription="@string/app_name"
                            android:padding="@dimen/_12sdp"
                            android:src="@drawable/ic_save"
                            app:tint="@color/colorPrimary" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/switzer_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/save"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/save" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/edit_lay"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/_70sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/save_lay"
                    app:layout_constraintEnd_toStartOf="@+id/cl_block"
                    app:layout_constraintStart_toEndOf="@+id/save_lay"
                    app:layout_constraintTop_toTopOf="@+id/save_lay">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/edit"
                        android:layout_width="0.0dip"
                        android:layout_height="0.0dip"
                        android:layout_margin="@dimen/_8sdp"
                        android:elevation="0.0dip"
                        app:cardBackgroundColor="#ffe6effe"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0.0dip"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.15"
                        app:layout_constraintWidth_percent="0.6">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:contentDescription="@string/app_name"
                            android:padding="@dimen/_12sdp"
                            android:src="@drawable/ic_edit_name"
                            app:tint="@color/colorPrimary" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/switzer_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/edit"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edit" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_block"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/_70sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/edit_lay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/edit_lay"
                    app:layout_constraintTop_toTopOf="@+id/edit_lay">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/block"
                        android:layout_width="0.0dip"
                        android:layout_height="0.0dip"
                        android:layout_margin="@dimen/_8sdp"
                        android:elevation="0.0dip"
                        app:cardBackgroundColor="#ffe6effe"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0.0dip"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.15"
                        app:layout_constraintWidth_percent="0.6">

                        <ImageView
                            android:id="@+id/iv_block"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:contentDescription="@string/app_name"
                            android:padding="@dimen/_13sdp"
                            android:src="@drawable/ic_block" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/block_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/switzer_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/block"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/block" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/ad_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/rect_btn"
                app:layout_constraintTop_toBottomOf="@+id/cl_buttons">

                <FrameLayout
                    android:id="@+id/fl_adplaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/belo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ad_lay">

                <LinearLayout
                    android:id="@+id/callBtn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/rect_btn"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_12sdp">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_call_green"
                        app:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/phoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="0711920144"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/network"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="@string/mobile"
                            android:textColor="@color/sub_title_color"
                            android:textSize="@dimen/_9ssp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/whatsappLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/rect_btn"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/whatsapp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/whatsapp"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/_12ssp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/locationLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/rect_btn"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_12sdp"
